@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Demo_Areas.Areas.LOC_Country.Models.LOC_CountryModel

<div class="d-flex flex-column">
    <div class="mt-3 mb-3">
        <form method="post" asp-controller="LOC_Country" asp-action="Save">
            @Html.HiddenFor(x=>x.CountryID)
            <div class="md-3 row">
                <label>CountryName</label>
                <div class="col-xl-4">
                    <input type="text" asp-for="CountryName" class="form-control" />
                    <span asp-validation-for="CountryName" class="text-danger"></span>
                </div>
            </div>
            <div class="md-3 row">
                <label>CountryCode</label>
                <div class="col-xl-4">
                    <input type="text" asp-for="CountryCode" class="form-control"/>
                    <span asp-validation-for="CountryCode" class="text-danger"></span>
                </div>
            </div>
            <div>
                <input type="submit" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>